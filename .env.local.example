# This file should be copied to .env for local development
# IMPORTANT: Add .env to .gitignore to prevent committing secrets

# Firebase Project A (Auth + Firestore)
NEXT_PUBLIC_FIREBASE_A_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_A_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_A_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_A_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_A_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_A_APP_ID=1:123456789:web:abcdef

# Firebase Project B (Storage)
NEXT_PUBLIC_FIREBASE_B_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_B_AUTH_DOMAIN=your-project-b.firebaseapp.com
NEXT_PUBLIC_FIREBASE_B_PROJECT_ID=your-project-b-id
NEXT_PUBLIC_FIREBASE_B_STORAGE_BUCKET=your-project-b.appspot.com
NEXT_PUBLIC_FIREBASE_B_MESSAGING_SENDER_ID=987654321
NEXT_PUBLIC_FIREBASE_B_APP_ID=1:987654321:web:fedcba

# Firebase Admin Service Account (Project A)
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Gemini API Key (Server-side only - DO NOT expose to client)
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Encryption Key for storing user's custom API keys
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-secure-random-encryption-key-min-32-chars

# Optional: Serper API for Web Search Plugin
# Get from https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# Environment
NODE_ENV=development
